<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8">
      <h2>Books<h2>
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br>
              </td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>