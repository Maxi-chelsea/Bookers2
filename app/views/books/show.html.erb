<div class='container'>
  <div class='row'>
    <%= render 'list', book: @new_book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail<h2>
        <table class='table'>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br>
                  <p><%= @user.name %></p>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if user_signed_in? && current_user.id == @book.user_id %>
                <td class="btn btn-sm btn-success" ><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td class="btn btn-sm btn-danger" ><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>