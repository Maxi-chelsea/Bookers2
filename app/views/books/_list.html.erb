<div class="col-md-3 t-100">
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<% if book.errors.any? %>
  <%= book.errors.count %>error prohibited this obj from being saved:<
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


  <h2>User info</h2>
    <table class='table'>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th>
      </tr>
      <tr>
	      <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction %></th>
      </tr>
    </table>
    <%= link_to "", edit_user_path(book.user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

  <h2 class="mt-3">New book</h2>
    <%= form_with model:book, url: books_path, local:true do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
          <%= f.submit 'Create Book' %>
    <% end %>
</div>