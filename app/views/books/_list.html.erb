<div class="col-md-4 t-100">
  <h2>User info</h2>
    <table class='table'>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th>
      </tr>
      <tr>
	      <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th></th>
      </tr>
    </table>
    <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  <h2 class="mt-3">New book</h2>
    <%= form_with model:book, local:true do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
          <%= f.submit 'Create Book' %>
    <% end %>
</div>