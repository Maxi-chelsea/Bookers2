<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<% if @book.errors.any? %>
<p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
  <% end %>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">
      <%= render 'list', book: @book %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-8">
      <h2>Books<h2>
    <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>




