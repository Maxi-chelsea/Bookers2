<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<% if @book.errors.any? %>
<p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
  <% end %>
<% end %>

<div class='row'>
  <%= render 'list', book: @book %>

<div class='col-md-8 offset-md-1'>
  <h2>Books<h2>
    <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
    </table>



